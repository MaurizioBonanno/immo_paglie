
<style>
  .image_casa {
    width: 30em;
    height: auto;
  }
</style>


<!-- START THE FEATURETTES -->

<% count=0 %>

<% immobili.forEach(function(immobile){ %> 

<hr class="featurette-divider">

<div class="row featurette">
  <% if(count%2 == 0){ %> 
  <div class="col-md-7">
      <%} else {%>
  <div class="col-md-7 order-md-2">
    <% } %>
    <h2 class="featurette-heading"><%= immobile.titolo %> / <span class="text-muted"><%= immobile.tipologia %></span></h2>
    <p class="lead">Vani: <%= immobile.vani %></p>
    <p class="lead">Camere: <%= immobile.camere %></p>
    <p class="lead">Bagni: <%= immobile.bagni %></p>
    <p class="lead">Prezzo: <%= immobile.prezzo %></p>
  </div>
  <div class="col-md-5">
         
        <img class="image_casa" src="/images/gallery/<%= immobile._id %>/<%= immobile.image %>" alt="">
        
    
  </div>
</div>
<% count++ %>
<%})%>

