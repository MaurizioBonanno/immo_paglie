<% include header.ejs %>

    <body class="bg-light">

<% include navbar.ejs %>

<main role="main" class="container">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
                <h6 class="border-bottom border-gray pb-2 mb-0">Tipologie Presenti</h6>
                <div class="media text-muted pt-3">

                        <table class="table table-dark">
                                <thead>
                                  <tr>

                                    <th scope="col">Titolo</th>
                                    <th scope="col">Descrizione</th>
                                    <th scope="col">Slug</th>
                                    <th scope="col">Immagine</th>
                                    <th scope="col">Modifica</th>
                                    <th scope="col">Elimina</th>
                                  </tr>
                                </thead>
                                <tbody>
                            
                    <% news.forEach(function(doc){%>
                    
                               <tr>

                                    <td>
                                        <%= doc.titolo %>
                                    </td>

                                    <td>
                                        <%= doc.descrizione %>
                                    </td>

                                    <td>
                                      <%= doc.slug%>
                                    </td>

                                    <td>
                                       <img src="/images/foto_news/<%= doc._id %>/<%= doc.image %>" alt="" style="width: 100px; height: 50px"> 
                                    </td>

                                    <td>
                                        <a href="/admin/news/edit/<%= doc._id %>">
                                          <i class="fas fa-edit"></i>
                                        </a>
                                      </td>
                                    <td>
                                      <a class="confirmDelete" href="/admin/news/delete/<%= doc._id %>">
                                        <i class="fas fa-trash-alt"></i>
                                      </a>
                                    </td>
                                </tr>
                    
                    
                    <% }) %>
                                 

                                </tbody>
                              </table>
                       
                </div>
        </div>
        </main>

    </body>

<% include footer.ejs %>