        <% include main_body.ejs %>


        <main role="main" class="container">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
                <h6 class="border-bottom border-gray pb-2 mb-0">Compilare i campi e premere Invio</h6>
                <div class="media text-muted pt-3">


                        <form action="/admin/immobili/add" method="POST" enctype="multipart/form-data">


                                <div class="form-group">
                                  <label for="exampleInputEmail1">Indirizzo</label>
                                  <input type="text" class="form-control" 
                                  id="indirizzo"
                                  name="indirizzo" 
                                  required
                                  placeholder="LocalitÃ  , Via ecc..">
                                  <small id="emailHelp" class="form-text text-muted">
                                      es. <i> Citta , Via ecc..</i>
                                  </small>
                                </div>

                                <div class="form-group">
                                        <label for="tipologia">Tipologia</label>
                                        <select name="tipologia" id="" class="form-control">
                                            <% tipi.forEach(function(t){%>
                                                <option value="<%=t.tipologia%>"><%=t.tipologia%></option>
                                            <%})%>
                                        </select>
                                    </div>

                                <div class="form-group">
                                        <label for="exampleInputEmail1">Vani</label>
                                        <input type="number" class="form-control" 
                                        id="vani"
                                        name="vani" 
                                        required
                                        placeholder="Valore Numerico">
                                        <small id="emailHelp" class="form-text text-muted">
                                            es. <i> 1, 2 , 3 ecc..</i>
                                        </small>
                                </div>

                                <div class="form-group">
                                        <label for="exampleInputEmail1">Camere</label>
                                        <input type="number" class="form-control" 
                                        id="camere"
                                        name="camere" 
                                        required
                                        placeholder="Numero">
                                        <small id="emailHelp" class="form-text text-muted">
                                            es. <i> 1, 2 , 4 ecc..</i>
                                        </small>
                                </div>

                                <div class="form-group">
                                        <label for="exampleInputEmail1">Bagni</label>
                                        <input type="number" class="form-control" 
                                        id="indirizzo"
                                        name="bagni" 
                                        required
                                        placeholder="Numero di bagni">
                                        <small id="emailHelp" class="form-text text-muted">
                                            es. <i> 1,2 ecc</i>
                                        </small>
                                </div>

                                <div class="form-group">
                                        <label for="exampleInputEmail1">Titolo</label>
                                        <input type="text" class="form-control" 
                                        id="indirizzo"
                                        name="titolo" 
                                        required
                                        placeholder="Inserisci un titolo esplicativo">
                                        <small id="emailHelp" class="form-text text-muted">
                                            es. <i> Bellissimo, vista Mare ecc.. </i>
                                        </small>
                                      </div>

                                      <div class="form-group">
                                        <label for="exampleInputEmail1">Descrizione</label>
                                        <input type="text" name="descrizione">
                                      </div>

                                <div class="form-group">
                                        <label for="exampleInputEmail1">Prezzo</label>
                                        <input type="number" class="form-control" 
                                        id="indirizzo"
                                        name="price" 
                                        required
                                        placeholder="Valore Numerico">

                                </div>


                                <div class="form-group">
                                        <label >Image</label>
                                        <input type="file" class="form-control" name="image" id="img" required>
                                        <br>
                                        <img src="/images/noimage.png" id="imagePreview" style="max-width: 100px;max-height:100px;">
                                </div>

                                <button type="submit" class="btn btn-primary">Invio</button>
                        </form>
                </div>
        </div>
        </main>






