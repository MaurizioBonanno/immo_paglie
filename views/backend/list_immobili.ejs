<% include header.ejs %>

    <body class="bg-light">

<% include navbar.ejs %>

<main role="main" class="container">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
                <h6 class="border-bottom border-gray pb-2 mb-0">Immobili Presenti</h6>
                <div class="media text-muted pt-3">

                        <table class="table table-dark">
                                <thead>
                                  <tr>
                                    <th scope="col">Indirizzo</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Vani</th>
                                    <th scope="col">Camere</th>
                                    <th scope="col">Bagni</th>
                                    <th scope="col">Titolo</th>
                                    <th scope="col">Descrizione</th>
                                    <th scope="col">Prezzo</th>
                                    <th scope="col">Immagine</th>
                                    <th scope="col">Modifica</th>
                                    <th scope="col">Elimina</th>
                                  </tr>
                                </thead>
                                <tbody>
                            
                    <% immobili.forEach(function(immobile){%>
                    
                               <tr>
                                    <td>
                                        <%= immobile.indirizzo %>
                                    </td>

                                    <td><%= immobile.tipologia %></td>

                                    <td>
                                        <%= immobile.vani %>
                                    </td>

                                    <td>
                                        <%= immobile.camere %>
                                    </td>

                                    <td>
                                        <%= immobile.bagni %>
                                    </td>

                                    <td>
                                        <%= immobile.titolo %>
                                    </td>

                                    <td>
                                        <%= immobile.descrizione %>
                                    </td>

                                    <td>
                                        <%= immobile.prezzo %>
                                    </td>

                                    <td>
                                       <img src="/images/gallery/<%= immobile._id %>/<%= immobile.image %>" alt="" style="width: 100px; height: auto;"> 
                                    </td>

                                    <td>
                                        <a href="/admin/immobili/edit/<%= immobile._id %>">
                                          <i class="fas fa-edit"></i>
                                        </a>
                                      </td>
                                    <td>
                                      <a class="confirmDelete" href="/admin/immobili/delete/<%= immobile._id %>">
                                        <i class="fas fa-trash-alt"></i>
                                      </a>
                                    </td>
                                </tr>
                    
                    
                    <% }) %>
                                 

                                </tbody>
                              </table>
                       
                </div>
        </div>
        </main>

    </body>

<% include footer.ejs %>